<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стили текста -->
    <style name="TextAppearance.MelocheiApp.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Price" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MelocheiApp.OldPrice" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textDecoration">line-through</item>
    </style>

    <!-- Кнопки -->
    <style name="Widget.MelocheiApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/height_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.MelocheiApp.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/height_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="Widget.MelocheiApp.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">@dimen/height_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
    </style>

    <style name="Widget.MelocheiApp.Button.Icon" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
    </style>

    <!-- Карточки -->
    <style name="Widget.MelocheiApp.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_medium</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

    <style name="Widget.MelocheiApp.ProductCard" parent="Widget.MelocheiApp.Card">
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">@dimen/spacing_small</item>
    </style>

    <style name="Widget.MelocheiApp.CategoryCard" parent="Widget.MelocheiApp.Card">
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- Поля ввода -->
    <style name="Widget.MelocheiApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="errorTextColor">?attr/colorError</item>
    </style>

    <style name="Widget.MelocheiApp.TextInputLayout.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="errorTextColor">?attr/colorError</item>
    </style>

    <!-- Нижняя навигация -->
    <style name="Widget.MelocheiApp.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">?attr/colorPrimaryVariant</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.MelocheiApp.BottomNavigationView.ActiveIndicator</item>
    </style>

    <style name="Widget.MelocheiApp.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryContainer</item>
    </style>

    <!-- Панель инструментов -->
    <style name="Widget.MelocheiApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/TextAppearance.MelocheiApp.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MelocheiApp.Subtitle</item>
    </style>

    <!-- Переключатели -->
    <style name="Widget.MelocheiApp.SwitchCompat" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <!-- Переключатели вкладок -->
    <style name="Widget.MelocheiApp.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="tabTextAppearance">@style/TextAppearance.MelocheiApp.Tab</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Бейджи -->
    <style name="Widget.MelocheiApp.Badge" parent="Widget.MaterialComponents.Badge">
        <item name="backgroundColor">?attr/colorError</item>
        <item name="maxCharacterCount">3</item>
    </style>

    <!-- Индикатор загрузки -->
    <style name="Widget.MelocheiApp.ProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackColor">?attr/colorPrimaryContainer</item>
    </style>

    <!-- Чип-элементы -->
    <style name="Widget.MelocheiApp.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Диалоги -->
    <style name="ThemeOverlay.MelocheiApp.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MelocheiApp.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MelocheiApp.Button.Text</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.MelocheiApp.Button.Text</item>
    </style>

    <!-- Разделитель -->
    <style name="Widget.MelocheiApp.Divider" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOutline</item>
    </style>

    <!-- Прокрутка -->
    <style name="Widget.MelocheiApp.ScrollView" parent="">
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <!-- Поиск -->
    <style name="Widget.MelocheiApp.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_background</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

</resources>