<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стили для Material Alert Dialog -->
    <style name="MaterialComponents.MaterialAlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:background">@color/colorSurface</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialComponents.MaterialAlertDialog.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialComponents.MaterialAlertDialog.Body.Text</item>
    </style>

    <style name="MaterialComponents.MaterialAlertDialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MaterialComponents.MaterialAlertDialog.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Тема для AlertDialog в приложении -->
    <style name="ThemeOverlay.MelocheiApp.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.MelocheiApp.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.MelocheiApp.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MelocheiApp.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MelocheiApp.Button.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.MelocheiApp.Button.TextButton.Dialog</item>
    </style>

    <style name="MaterialAlertDialog.MelocheiApp.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MaterialAlertDialog.MelocheiApp.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.MelocheiApp.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>