<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема приложения -->
    <style name="Theme.MelocheiApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorError">@color/colorError</item>

        <item name="colorOnBackground">@color/primaryTextColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="colorOnError">@color/white</item>

        <!-- Статус бар и панель навигации -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Шрифты -->
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

        <!-- Стили компонентов -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MelocheiApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MelocheiApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MelocheiApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MelocheiApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MelocheiApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MelocheiApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MelocheiApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MelocheiApp.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MelocheiApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MelocheiApp.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MelocheiApp.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MelocheiApp.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MelocheiApp.Overline</item>

        <!-- Компоненты Material Design -->
        <item name="materialButtonStyle">@style/Widget.MelocheiApp.Button</item>
        <item name="materialCardViewStyle">@style/Widget.MelocheiApp.CardView</item>
        <item name="textInputStyle">@style/Widget.MelocheiApp.TextInputLayout</item>
        <item name="toolbarStyle">@style/Widget.MelocheiApp.Toolbar</item>
        <item name="tabStyle">@style/Widget.MelocheiApp.TabLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.MelocheiApp.BottomNavigationView</item>
    </style>

    <!-- Темная тема приложения -->
    <style name="Theme.MelocheiApp.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Основные цвета для темной темы -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarker</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/colorAccentDark</item>
        <item name="colorSecondaryVariant">@color/colorAccentDarker</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/colorBackgroundDark</item>
        <item name="colorSurface">@color/colorSurfaceDark</item>
        <item name="colorError">@color/colorErrorDark</item>

        <item name="colorOnBackground">@color/primaryTextColorDark</item>
        <item name="colorOnSurface">@color/primaryTextColorDark</item>
        <item name="colorOnError">@color/white</item>

        <!-- Статус бар и панель навигации для темной темы -->
        <item name="android:statusBarColor">@color/colorSurfaceDark</item>
        <item name="android:navigationBarColor">@color/colorBackgroundDark</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Тема для Splash Screen -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Типографика -->
    <style name="TextAppearance.MelocheiApp.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.MelocheiApp.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Компоненты -->
    <style name="Widget.MelocheiApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MelocheiApp.Button</item>
    </style>

    <style name="Widget.MelocheiApp.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MelocheiApp.Button</item>
    </style>

    <style name="Widget.MelocheiApp.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MelocheiApp.Button</item>
    </style>

    <style name="Widget.MelocheiApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.MelocheiApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.MelocheiApp.Caption</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Widget.MelocheiApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.MelocheiApp.Headline6</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.MelocheiApp.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.MelocheiApp.Button</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/secondaryTextColor</item>
    </style>

    <style name="Widget.MelocheiApp.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.MelocheiApp.Caption</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.MelocheiApp.Caption</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Специальные стили для форм -->
    <style name="Widget.MelocheiApp.TextInputLayout.Dense" parent="Widget.MelocheiApp.TextInputLayout">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Стили для диалогов -->
    <style name="ThemeOverlay.MelocheiApp.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorSurface</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.MelocheiApp</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.MelocheiApp.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.MelocheiApp.Body.Text</item>
        <item name="buttonBarButtonStyle">@style/Widget.MelocheiApp.Button.Text</item>
    </style>

    <style name="MaterialAlertDialog.MelocheiApp" parent="MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearance">@style/ShapeAppearance.MelocheiApp.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.MelocheiApp.Title.Text" parent="MaterialComponents.MaterialAlertDialog.Title.Text">
        <item name="android:textAppearance">@style/TextAppearance.MelocheiApp.Headline6</item>
    </style>

    <style name="MaterialAlertDialog.MelocheiApp.Body.Text" parent="MaterialComponents.MaterialAlertDialog.Body.Text">
        <item name="android:textAppearance">@style/TextAppearance.MelocheiApp.Body1</item>
    </style>

    <!-- Фигуры -->
    <style name="ShapeAppearance.MelocheiApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.MelocheiApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.MelocheiApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Стили для списков -->
    <style name="Widget.MelocheiApp.RecyclerView" parent="">
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <!-- Стили для изображений -->
    <style name="Widget.MelocheiApp.ImageView" parent="">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.MelocheiApp.ImageView.Rounded" parent="Widget.MelocheiApp.ImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Стили для прогресс-баров -->
    <style name="Widget.MelocheiApp.ProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackCornerRadius">2dp</item>
        <item name="indicatorColor">@color/colorPrimary</item>
        <item name="trackColor">@color/colorPrimaryLight</item>
    </style>

    <!-- Стили для чипов -->
    <style name="Widget.MelocheiApp.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MelocheiApp.Body2</item>
    </style>

    <style name="Widget.MelocheiApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MelocheiApp.Body2</item>
    </style>

    <!-- Стили для переключателей -->
    <style name="Widget.MelocheiApp.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MelocheiApp.Switch</item>
    </style>

    <style name="ThemeOverlay.MelocheiApp.Switch" parent="">
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>
    </style>

    <!-- Стили для админской панели -->
    <style name="Theme.MelocheiApp.Admin" parent="Theme.MelocheiApp">
        <item name="colorPrimary">@color/colorAdminPrimary</item>
        <item name="colorPrimaryVariant">@color/colorAdminPrimaryDark</item>
        <item name="colorSecondary">@color/colorAdminAccent</item>
    </style>
</resources>